include layout/header
body
include layout/navigation
h1.container="Registration page"
div.dropdown-divider
form(method="post").container.h5
    div.form-row
        div.form-group.col-md-3
            label(for="validationServer01")="First name"
            input(name="upFirstName",type="text",placeholder="First name",required).form-control
        div.form-group.col-md-3
            label(for="inputFirst4")="Last name"
            input(name="upLastName",type="text",placeholder="Last name",required).form-control
        div.form-group.col-md-4
            label(for="inputNickName4")="NickName"
            input(name="upNickName",type="text",placeholder="Nickname",required).form-control#inputEmail4
            small#passwordHelpBlock.form-text.text-muted="Enter your nickname."
        div.form-group.col-md-4
            label(for="inputEmail4")="Email"
            input(name="upEmail",type="email",placeholder="email@example.com",required).form-control#inputEmail4
            small#passwordHelpBlock.form-text.text-muted="Enter your active email."
        div.form-group.col-md-3
            label(for="inputPassword4")="Password"
            input(name="upPassword",type="password",aria-describedby="passwordHelpBlock",placeholder="Password",required).form-control#inputPassword4
            small#passwordHelpBlock.form-text.text-muted="Your password must be 6-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji."
        div.form-group.col-md-3 
            label(for="inputPassword4")="Confirm Password"
            input(name="upConfirmPassword",type="password",aria-describedby="passwordHelpBlock",placeholder="Type password again",required).form-control#inputPassword3
            small#passwordHelpBlock.form-text.text-muted="Please enter password again"
    case st
        when true
            div(role="alert").alert.alert-success
                h4.alert-heading="Well done!"
                p="Aww yeah, you successfully registered!"
                hr
                p.mb-0="Our congratulations"
        when false
            div(role="alert").alert.alert-danger
                h4.alert-heading="Oopps..."
                h5.text-muted="Seemeth like something went wrong"
                p=error
                hr
                p.mb-0="Please try again"     
    button(type="submit").btn.btn-primary="Submit"
    div.dropdown-divider
    a(href="/l").dropdown-item="Already been here? Sign in"
include layout/footer

