        form.form-inline
            unless user
                ul.nav.justify-content-end
                    li.nav-item.m-1
                        a(type="button",href="/join/login").btn.btn-outline-success.bg-dark="Sing IN"
                    li.nav-item.m-1
                        a(type="button",href="/join/registration").btn.btn-outline-success.bg-dark="Sing UP"
