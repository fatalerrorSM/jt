include ../layout/header
include ../layout/navigation
div.jumbotron.jumbotron-fluid.mb-0
    div.container
        h1.display-4="Posts"
        p.lead="Here you look for posts"
div.album.py-5.bg-light
    div.container
        div.row
                each val,index in p
                    div.col-md-4
                        div.card.mb-4.shadow-sm
                            each v,i in images
                                - let img = v._id.toString()===val.image.toString() ? v.path : "und"
                                if img == "und"

                                else
                                    img(src="/uploads"+img).card-img-top
                            div.card-body
                                h5.card-title=val.title
                                p.card-text=val.text
                                a(href="/post/cpost/"+val.url).btn.btn-primary="Go deep"
                            ul.list-group.list-group-flush
                                li.list-group-item="Post tag : "+val.tag
                                each vl,dd in users
                                    - let temp = vl._id.toString()===val.author.toString() ? vl.nickname : "anonymous"
                                    if temp == "anonymous"
                                        
                                    else
                                        li.list-group-item="Post author : "+temp
                           
                                                            
include ../layout/footer
